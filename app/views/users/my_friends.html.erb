<h1>Friends</h1>
<div class="search-area">
   <h3> Search friend </h3>
   <%= form_tag search_friend_path, remote: true, method: :get do %>
      <div class="row">
         <div class="col-sm-9 no-right-padding">
               <%= text_field_tag :friend, params[:friend], class:"form-control form-control-lg", autofocus: true, placeholder: "Name or email" %>
         </div>
         <div class="col-sm-3 no-left-padding">
               <%= button_tag type: :submit, class: "btn btn-success" do %>
                  <%= fa_icon "search 2x" %>
               <% end %>
         </div>
      </div>
   <% end %>
</div>
<div id="friends"></div>
<% if !@tracked_friends.empty? %>
   <%= render 'friends/list' %>
<% end %>