<h1>My Portfolio</h1>
<div class="search-area">
    <h3> Search stock </h3>
    <%= form_tag search_stock_path, method: :get do %>
        <div class="row">
            <div class="col-sm-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock], class:"form-control form-control-lg", autofocus: true, placeholder: "Stock ticker synbol" %>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon "search 2x" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<% if @stock %>
    <div class="card results-block">
        Company:<strong><%= @stock.name %></strong>
        Ticker synbol:<strong> <%= @stock.ticker %></strong>
        Price:<strong> <%= @stock.price %></strong>
    </div>
<% end %>

